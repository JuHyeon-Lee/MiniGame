<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#4d25b6d2">

    <TextView
        android:text="두더지잡기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/textView2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="플레이어"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_dudogi"
                android:layout_span="20"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="점수 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_dudogi"
                android:text="0" />

            <TextView
                android:text=" / "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_in_dudogi" />

        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:text="시간 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" />

        <TextView
            android:text="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:id="@+id/time_dudogi" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dudogi1"
            android:background="@drawable/digda"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi2"
            android:layout_row="0"
            android:layout_column="3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi3"
            android:layout_row="0"
            android:layout_column="5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dudogi5"
            android:background="@drawable/digda"
            android:layout_row="2"
            android:layout_column="3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi6"
            android:layout_row="2"
            android:layout_column="5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi8"
            android:layout_row="4"
            android:layout_column="3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi9"
            android:layout_row="4"
            android:layout_column="5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi11"
            android:layout_row="6"
            android:layout_column="3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi12"
            android:layout_row="6"
            android:layout_column="5" />

        <TextView
            android:id="@+id/blank1"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/blank2"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="340dp"
            android:id="@+id/blank3"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="340dp"
            android:id="@+id/blank4"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="340dp"
            android:id="@+id/blank5"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:layout_height="20dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi7"
            android:layout_row="4"
            android:layout_column="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dudogi4"
            android:background="@drawable/digda"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/digda"
            android:id="@+id/dudogi10"
            android:layout_row="6"
            android:layout_column="1" />
    </GridLayout>

</LinearLayout>