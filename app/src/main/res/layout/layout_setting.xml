<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d25b6d2"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/settingicon"
        android:id="@+id/imageView2"
        android:layout_height="70dp" />

    <TextView
        android:text="SETTINGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000000"
        android:id="@+id/title_setting" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/blank1" />

    <Button
        android:text="캐시 삭제"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_cache" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/blank2" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="진동 ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vibrate_on" />

        <Button
            android:text="진동 OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vibrate_off" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/blank3" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="소리 ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound_on" />

        <Button
            android:text="소리 OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound_off" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/blank4" />

    <Button
        android:text="개발자에게 메일 보내기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:id="@+id/sendmail" />

    <Button
        android:text="게임에 대한 상세정보 확인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:id="@+id/information" />

</LinearLayout>